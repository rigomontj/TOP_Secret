<h1>List of users</h1>

  <table>
    <tr>
        <th>User</th>
        <th>Notes</th>
        <th>Action</th>
    </tr>

  <% @users.each do |t| %>


      <tr>
          <td><%= t.username %></td>
          <td> Notes </td>
          <td>
          <%= link_to 'Show', user_path(t) %> -
          <%= link_to 'Edit', edit_user_path(t) %> -
          <%= link_to 'Delete', user_path(t),
                method: :delete,
                data: {confirm: 'Are you sure ?'} %>
          </td>
      </tr>
  </br>

  </table>


  <% end %>
